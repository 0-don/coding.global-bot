// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id        Int          @id @default(autoincrement())
  memberId  String       @unique
  guildId   String
  username  String
  guildName String
  roles     MemberRole[]
  bumps     MemberBump[]

  @@unique([memberId, guildId], name: "member_guild")
}

model MemberRole {
  id        Int    @id @default(autoincrement())
  roleId    String
  memberId  String
  name      String
  guildName String
  username  String
  member    Member @relation(fields: [memberId], references: [memberId])

  @@unique([memberId, roleId], name: "member_role")
}

model MemberBump {
  id        Int    @id @default(autoincrement())
  memberId  String
  guildId   String
  guildName String
  username  String
  count     Int
  member    Member @relation(fields: [memberId], references: [memberId])

  @@unique([memberId, guildId], name: "member_guild")
}
