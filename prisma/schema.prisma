// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Guild {
  guildId   String @id @unique
  guildName String
  lookback  Int    @default(9999)

  memberGuild           MemberGuild[]
  memberRole            MemberRole[]
  memberMessages        MemberMessages[]
  guildVoiceEvents      GuildVoiceEvents[]
  memberHelper          MemberHelper[]
  memberCommandHistory  MemberCommandHistory[]
  memberDeletedMessages MemberDeletedMessages[]
  threads               Thread[]
  tags                  Tag[]
  threadMessages        ThreadMessage[]
}

model GuildVoiceEvents {
  id        Int       @id @default(autoincrement())
  memberId  String
  guildId   String
  channelId String
  join      DateTime  @default(now())
  leave     DateTime?

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])
}

model Member {
  memberId String @id @unique

  username      String
  globalName    String?
  discriminator String?

  bot    Boolean @default(false)
  system Boolean @default(false)

  avatarUrl           String?
  bannerUrl           String?
  accentColor         Int?
  avatarDecorationUrl String?
  flags               BigInt?

  hexAccentColor       String? // hexadecimal accent color
  avatarDecorationData Json? // AvatarDecorationData object
  collectibles         Json? // user collectibles
  primaryGuild         Json? // UserPrimaryGuild object

  // Timestamps
  createdAt DateTime?
  updatedAt DateTime  @default(now()) @updatedAt

  roles                MemberRole[]
  guilds               MemberGuild[]
  memberMessages       MemberMessages[]
  guildVoiceEvents     GuildVoiceEvents[]
  memberHelper         MemberHelper[]
  memberCommandHistory MemberCommandHistory[]
  threads              Thread[]
  threadMessages       ThreadMessage[]

  deletedByMemberMessages MemberDeletedMessages[] @relation("deletedByMemberMessages")
  memberDeletedMessages   MemberDeletedMessages[] @relation("memberDeletedMessages")
}

model MemberMessages {
  id        String @id @default(cuid())
  memberId  String
  guildId   String
  messageId String @unique
  channelId String

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])

  createdAt DateTime @default(now())
}

model MemberGuild {
  id       Int     @id @default(autoincrement())
  memberId String
  guildId  String
  status   Boolean
  nickname String?

  // Guild-specific avatar (Nitro feature)
  avatarUrl           String?
  bannerUrl           String?
  avatarDecorationUrl String?

  // Guild-specific display data
  displayName         String?
  joinedAt            DateTime?
  displayHexColor     String?
  highestRolePosition Int?

  // Presence data (optional - can be stale)
  presenceStatus    String?
  presenceActivity  String?
  presenceUpdatedAt DateTime?

  // Member status
  pending                    Boolean   @default(false)
  premiumSince               DateTime?
  communicationDisabledUntil DateTime?
  flags                      BigInt?

  // Additional GuildMember fields from API
  displayColor         Int? // displayed role color in base 10
  avatarDecorationData Json? // AvatarDecorationData object
  bannable             Boolean @default(true)
  kickable             Boolean @default(true)
  manageable           Boolean @default(true)
  moderatable          Boolean @default(true)

  moveCounter Int     @default(0) // troll-move-user command
  moving      Boolean @default(false) // troll-move-user command
  moveTimeout Int     @default(0) // troll-move-user command

  warnings Int @default(0) // spamming external links

  muted    Boolean @default(false) // if true, mute on join
  deafened Boolean @default(false) // if true, deafen on join
  lookback Int     @default(9999) // stats looback period

  // Timestamps
  updatedAt DateTime @default(now()) @updatedAt

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])

  @@unique([memberId, guildId], name: "member_guild")
}

model MemberHelper {
  id Int @id @default(autoincrement())

  memberId String
  guildId  String

  threadId      String?
  threadOwnerId String?

  createdAt DateTime @default(now())

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])
}

model MemberRole {
  id       Int    @id @default(autoincrement())
  roleId   String
  guildId  String
  memberId String

  // Role metadata
  name         String?
  position     Int?
  color        Int?
  hexColor     String?
  hoist        Boolean?
  icon         String?
  unicodeEmoji String?
  mentionable  Boolean?
  managed      Boolean?
  tags         Json?

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])

  @@unique([memberId, roleId], name: "member_role")
}

model MemberCommandHistory {
  id        Int      @id @default(autoincrement())
  memberId  String
  guildId   String
  channelId String
  command   String
  createdAt DateTime @default(now())

  member Member @relation(fields: [memberId], references: [memberId], onDelete: Cascade)
  guild  Guild  @relation(fields: [guildId], references: [guildId])
}

model MemberDeletedMessages {
  id                Int      @id @default(autoincrement())
  deletedByMemberId String
  messageMemberId   String
  guildId           String
  messageId         String
  channelId         String
  content           String
  createdAt         DateTime @default(now())

  deletedByMember Member @relation(fields: [deletedByMemberId], references: [memberId], onDelete: Cascade, name: "deletedByMemberMessages")
  messageMember   Member @relation(fields: [messageMemberId], references: [memberId], onDelete: Cascade, name: "memberDeletedMessages")
  guild           Guild  @relation(fields: [guildId], references: [guildId])
}

model MemberUpdateQueue {
  id        Int      @id @default(autoincrement())
  memberId  String
  guildId   String
  priority  Int      @default(0)
  createdAt DateTime @default(now())

  @@unique([memberId, guildId])
}

// ============================================
// Thread/Forum Models
// ============================================

model Thread {
  id        String  @id // Discord thread ID
  guildId   String
  parentId  String? // Forum channel ID
  authorId  String
  name      String
  boardType String // job-board, dev-board, showcase, etc.

  // Statistics
  messageCount Int @default(0)
  memberCount  Int @default(0)

  // Settings
  locked              Boolean   @default(false)
  archived            Boolean   @default(false)
  archivedAt          DateTime?
  autoArchiveDuration Int?
  invitable           Boolean?
  rateLimitPerUser    Int?
  flags               BigInt?

  // Timestamps
  createdAt DateTime?
  updatedAt DateTime  @updatedAt

  // Relations
  guild    Guild           @relation(fields: [guildId], references: [guildId])
  author   Member          @relation(fields: [authorId], references: [memberId])
  tags     ThreadTag[]
  messages ThreadMessage[]

  @@index([guildId])
  @@index([parentId])
  @@index([boardType])
}

model Tag {
  id        String  @id // Discord tag ID
  guildId   String
  name      String
  emojiId   String?
  emojiName String?

  threads ThreadTag[]
  guild   Guild       @relation(fields: [guildId], references: [guildId])

  @@index([guildId])
}

model ThreadTag {
  threadId String
  tagId    String

  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  tag    Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([threadId, tagId])
}

model ThreadMessage {
  id       String @id // Discord message ID
  threadId String
  authorId String
  guildId  String

  // Content
  content String

  // Metadata
  createdAt DateTime
  editedAt  DateTime?
  pinned    Boolean   @default(false)
  tts       Boolean   @default(false)
  type      String    @default("DEFAULT")

  // Rich content (stored as JSON)
  attachments Json? // Array of attachment objects
  embeds      Json? // Array of embed objects
  mentions    Json? // {users: [], roles: [], everyone: boolean}
  reactions   Json? // Array of {emoji, count}
  reference   Json? // {messageId, channelId, guildId}

  // Relations
  thread Thread @relation(fields: [threadId], references: [id], onDelete: Cascade)
  author Member @relation(fields: [authorId], references: [memberId])
  guild  Guild  @relation(fields: [guildId], references: [guildId])

  @@index([threadId])
  @@index([authorId])
  @@index([guildId])
}

model SyncProgress {
  guildId      String
  type         String // "threads" | "users"
  processedIds String[] @default([])
  failedIds    String[] @default([])
  updatedAt    DateTime @default(now()) @updatedAt

  @@id([guildId, type])
}
